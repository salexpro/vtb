                        tr
                            td
                                +check('doc2')
                            td 348-Акт
                            td OOO “Бизнес-Коннект”
                            td Ожидает пописания
                            td Абуд И.Ф.
                            td 8/9/19
                            td Акт
                        tr
                            td
                                +check('doc3')
